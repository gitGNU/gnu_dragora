./configure \
 --prefix=/usr \
 --sysconfdir=/etc \
 --libdir=/usr/lib${libSuffix} \
 --localstatedir=/var \
 --infodir=/usr/info \
 --mandir=/usr/man \
 --docdir=/usr/doc/${sourceName}-${sourceVersion} \
 --htmldir=/usr/doc/${sourceName}-${sourceVersion}/html \
 --enable-gpgtar=yes \
 $BUILD_SYSTEM
