#  This program is distributed in the hope that it will be useful,
#  but WITHOUT ANY WARRANTY; without even the implied warranty of
#  MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#  GNU General Public License for more details.
#
#  You should have received a copy of the GNU General Public License
#  along with this program.  If not, see <http://www.gnu.org/licenses/>.

set -e

CWD=$(pwd)

TMP=${TMP:-/tmp/sources}
OUT=${OUT:-/tmp/packages}

V=1.2.1
ARCH=${ARCH:-i486}
B=2

# Flags for the compiler:
DCFLAGS=${DCFLAGS:=-O2}

# Parallel jobs for the compiler:
JOBS=${JOBS:=-j4}

PKG=${TMP}/package-flac

rm -rf $PKG
mkdir -p $PKG $OUT

echo "Uncompressing the tarball..."
rm -rf ${TMP}/flac-${V}
lzip -cd ${CWD}/flac-${V}.tar.lz | tar -xvf - -C $TMP

cd ${TMP}/flac-${V}

# Set sane ownerships and permissions:
chown -R 0:0 .
find . \
 \( -perm 2777 -o \
    -perm 777  -o \
    -perm 775  -o \
    -perm 711  -o \
    -perm 555  -o \
    -perm 511     \
 \) -exec chmod 755 {} + \
  -o \
 \( -perm 666 -o \
    -perm 664 -o \
    -perm 600 -o \
    -perm 444 -o \
    -perm 440 -o \
    -perm 400    \
 \) -exec chmod 644 {} +

# Apply patches:
zcat ${CWD}/patches/fixup.docdir.diff.gz | patch -p0 --verbose

# From Fedora (thanks):
zcat ${CWD}/patches/flac-1.2.1-asm.patch.gz | patch -p1 --verbose
zcat ${CWD}/patches/flac-1.2.1-gcc43.patch.gz | patch -p1 --verbose
zcat ${CWD}/patches/flac-1.2.1-hidesyms.patch.gz | patch -p1 --verbose
zcat ${CWD}/patches/flac-1.2.1-tests.patch.gz | patch -p1 --verbose
zcat ${CWD}/patches/flac-1.2.1-cflags.patch.gz | patch -p1 --verbose
zcat ${CWD}/patches/flac-1.2.1-bitreader.patch.gz | patch -p0 --verbose

# From Debian (thanks):
patch -p0 -i ${CWD}/patches/CVE-2014-8962.patch
patch -p0 -i ${CWD}/patches/CVE-2014-9028.patch

CFLAGS="$DCFLAGS" \
CXXFLAGS="$DCFLAGS" \
./configure \
 --prefix=/usr \
 --mandir=/usr/man \
 --enable-shared \
 --localstatedir=/var \
 --disable-static \
 --disable-debug \
 --build=${ARCH}-dragora-linux-gnu

make $JOBS
make install DESTDIR=$PKG

# Strip binaries & libraries:
( cd $PKG
  find . -type f | xargs file | awk '/ELF/ && /executable/ || /shared object/' | \
   cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null
)

gzip -9N ${PKG}/usr/man/man?/*  # Compress manpages.

# Move (HTML) documentation under usr/doc directory:
mkdir -p ${PKG}/usr/doc/flac-${V}
mv ${PKG}/usr/share/doc/flac-${V}/* ${PKG}/usr/doc/flac-${V}
rmdir ${PKG}/usr/share/doc/flac-${V}
rmdir ${PKG}/usr/share/doc

# Copy the rest of the documentation:
cp -a \
 AUTHORS COPYING* README \
 ${PKG}/usr/doc/flac-${V}

# Copy the description files:
mkdir -p ${PKG}/description
cp ${CWD}/description/* ${PKG}/description

cd $PKG
makepkg -l ${OUT}/flac-${V}-${ARCH}-${B}.tlz

