#  along with this program.  If not, see <http://www.gnu.org/licenses/>.

# Override locale settings
LC_ALL=C
LANGUAGE=C

export LC_ALL LANGUAGE

# Exit immediately on any error
set -o errexit

# Get the current working directory of the recipe: printing the absolute
# pathname or just prints the current directory in case of fails
CWD="$(cd "$(dirname -- "$0" 2> /dev/null)" ; printf %s "$PWD")"

# Functions
show_help() {
  printf '%s\n' \
   "Usage: $0 [options] [file ...]"                                       \
   "Builder of custom stages."                                            \
   ""                                                                     \
   "Defaults for the options are specified in brackets."                  \
   ""                                                                     \
   "Options:"                                                             \
   "  -h          display this help and exit"                             \
   "  -V          output version information and exit"                    \
   "  -S          don't strip unneeded or debugging symbols from files"   \
   "  -a          architecture to use [${arch}]"                          \
   "  -c          output directory for the cross compiler [${crossdir}]"  \
   "  -j          parallel jobs for the compiler [${jobs}]"               \
   "  -k          keep (don't delete) source directory"                   \
   "  -r          output directory for the root system [${rootdir}]"      \
   "  -s          sets the stage number to build [${stage}]"              \
   "  -t          temporary directory for compilation [${tmpdir}]"        \
   ""                                                                     \
   "Some influential environment variables:"                              \
   "  CFLAGS      C compiler flags"                                       \
   "  CXXFLAGS    C++ compiler flags"                                     \
   "  LDFLAGS     linker flags, e.g. -L<lib dir> if you have libraries"   \
   "              in a nonstandard directory <lib dir>"                   \
   "  VENDOR      VENDOR to reflect on the TARGET [${VENDOR}]"            \
   "  TARGET      TARGET triplet (platform) on which code runs [auto]"    \
   "  GCC_OPTS    overrides default configure options for GCC [auto]"     \
   "  MULTILIB    overrides default MULTILIB options for GCC [auto]"      \
   ""
}

# To check if the specified argument is a valid number
_isNumber() {
  if ! printf %s "$1" | grep -q -E '^[-+]?([0-9]+\.?|[0-9]*\.[0-9]+)$' ; then
    echo "bootstrap: \"${OPTARG}\" need to be a valid number for -${option}." 1>&2
    exit 1
  fi
}

# To strip binaries and libraries
stripFiles() {
  if [ "$strip" = "strip" ] ; then
    # Quote all characters with backslashes,
    # protects embedded whitespace in filenames
    quote() { sed 's/./\\&/g' ; }

    local directory="$1"

    echo "==> Stripping binaries and libraries in \`$directory' (if any) ..."
    find "$directory" -type f | quote | xargs file | \
     awk '/ELF/ && (/executable/ || /shared object/) && /not stripped/' | \
      cut -f 1 -d : | quote | xargs strip --strip-unneeded 2> /dev/null || true

    find "$directory" -type f | quote | xargs file | grep 'current ar archive' | \
     cut -f 1 -d : | quote | xargs strip --strip-debug 2> /dev/null || true
  fi
}

# Delete directories if does not exist
rmIfDir() {
  local directory

  for directory in "$@" ; do
    if [ -d "$directory" ] ; then
      echo "Deleting $directory ..."
      rm -rf "$directory"
    fi
  done
}

# Default variable values
strip=strip
arch="$(uname -m)"
tmpdir=/tmp/bootstrap
crossdir="${tmpdir}/cross"
rootdir="${tmpdir}/root"
worktree="$CWD"
jobs=1
keepdir=nokeepdir
stage=0
VENDOR="${VENDOR:-dragora}"
CFLAGS="${CFLAGS:--Os -fPIE}"
CXXFLAGS="${CXXFLAGS:-$CFLAGS}"
LDFLAGS="${LDFLAGS:--static}"
LDFLAGS_BINUTILS="${LDFLAGS_BINUTILS:---static}"

# Parse options
while getopts ":hSVk a:c:j:r:s:t:" option ; do
  case "$option" in
    S)
      strip=nostrip
      ;;
    a)
      arch="$OPTARG"
      ;;
    c)
      crossdir="$OPTARG"
      ;;
    j)
      jobs="$OPTARG"
      _isNumber "$jobs"
      ;;
    k)
      keepdir=keepdir
      ;;
    r)
      rootdir="$OPTARG"
      ;;
    s)
      stage="$OPTARG"
      _isNumber "$stage"
      ;;
    t)
      tmpdir="$OPTARG"
      ;;
    V)
      printf '%s\n' \
       "bootstrap 2.3" \
       "Copyright (C) 2014, 2015, 2016  Matias A. Fonzo." \
       "License GPLv2+: GNU GPL version 2 or later <http://gnu.org/licenses/gpl.html>" \
       "This is free software: you are free to change and redistribute it." \
       "There is NO WARRANTY, to the extent permitted by law."
      exit 0
      ;;
    h)
      show_help
      exit 0
      ;;
    :)
      printf '%s\n' \
       "The option '-${OPTARG}' requires an argument" \
       "Usage: $0 [-hSVk] [-a <arch>] [-c <crossdir>] [-j <jobs>] [-r <rootdir>] [-s <stage>] [-t <tmpdir>] [file ...]" 1>&2
      exit 1
      ;;
    \?)
      printf '%s\n' \
       "bootstrap: illegal option -- '-${OPTARG}'" \
       "Usage: $0 [-hSVk] [-a <arch>] [-c <crossdir>] [-j <jobs>] [-r <rootdir>] [-s <stage>] [-t <tmpdir>] [file ...]" 1>&2
      exit 1
      ;;
  esac
done
shift "$((OPTIND - 1))"

# Prepare settings.
#
# Compose the host name changing it to "cross"
host="$(cc -dumpmachine | sed 's/-[^-]*/-cross/')"

# Establish appropriate settings for each supported architecture
case "$arch" in
  i?86)
    MUSL_ARCH=i386
    LINUX_ARCH=x86
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    GCC_OPTS="${GCC_OPTS:---with-arch=${arch}}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  x86_64)
    MUSL_ARCH=x86_64
    LINUX_ARCH=x86_64
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    GCC_OPTS="${GCC_OPTS:---with-arch=x86-64 --with-tune=generic --enable-long-long}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  x32)
    MUSL_ARCH=x32
    LINUX_ARCH=x86_64
    TARGET="${TARGET:-x86_64-x32-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---enable-multilib --with-multilib-list=mx32}"
    ;;
  armhf)
    MUSL_ARCH=arm
    LINUX_ARCH=arm
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musleabihf}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  arm*)
    MUSL_ARCH=arm
    LINUX_ARCH=arm
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musleabi}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  aarch64*)
    MUSL_ARCH=arm
    LINUX_ARCH=arm64
    TARGET="${TARGET:-aarch64-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  mips*)
    MUSL_ARCH=mips
    LINUX_ARCH=mips
    TARGET="${TARGET:=${arch}-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  powerpc*|ppc*)
    MUSL_ARCH=powerpc
    LINUX_ARCH=powerpc
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    GCC_OPTS="${GCC_OPTS:---with-long-double-64 --enable-secureplt}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  or1k*)
    MUSL_ARCH=or1k
    LINUX_ARCH=openrisc
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  sh*)
    MUSL_ARCH=sh
    LINUX_ARCH=sh
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  microblaze)
    MUSL_ARCH=microblaze
    LINUX_ARCH=microblaze
    TARGET="${TARGET:-${arch}-${VENDOR}-linux-musl}"
    MULTILIB="${MULTILIB:---disable-multilib --with-multilib-list=}"
    ;;
  *)
    echo "bootstrap: Unrecognized architecture '$arch'." 1>&2
    exit 1;
esac

# Import custom variables from 'bootstrap.conf'
if [ -f "${CWD}"/bootstrap.conf ] ; then
  echo "Importing bootstrap.conf ..."
  . "${CWD}"/bootstrap.conf
fi

# Set default path
PATH="${crossdir}/bin:${PATH}"

# Propagate variables
export PATH CFLAGS CXXFLAGS LDFLAGS

# Save some variables to restore it later
SAVED_CFLAGS="$CFLAGS"
SAVED_CXXFLAGS="$CXXFLAGS"
SAVED_LDFLAGS="$LDFLAGS"

# Set default mask
umask 022

# Create required directories (if needed)
mkdir -p "${tmpdir}/sources" "$crossdir" "$rootdir"

# Process the files from stage number
for file in ""${CWD}/stage.d/${stage}/${@:-??-*}"" ; do

  # Get the basename
  file="${file##*/}"

  if [ ! -f "${CWD}/stage.d/${stage}/$file" ] ; then
    echo "bootstrap: File '${CWD}/stage.d/${stage}/$file' not found or not regular." 1>&2
    exit 1
  fi

  if [ ! -x "${CWD}/stage.d/${stage}/$file" ] ; then
    echo "bootstrap: I won't build '${stage}/$file'.  File not executable." 1>&2
    continue;
  fi

  # Stage pre-settings.
  #
  # Create sysroot directory if needed, recreating symlink for the stage 0
  if [ "$stage" = "0" ] ; then
    mkdir -p "${crossdir}/${TARGET}"
    if [ ! -e "${crossdir}/${TARGET}/usr" ] ; then
      ln -sf . "${crossdir}/${TARGET}/usr"
    fi
  fi

  # Create tools directory if needed, recreating symlink for the stage 1
  if [ "$stage" = "1" ] ; then
    mkdir -p "${rootdir}/tools"
    ln -sf "${rootdir}/tools" /
  fi

  # Load script
  echo "==> File \"${file##*/}\" from stage $stage in progress ..."
  . "${CWD}/stage.d/${stage}/$file"

  # Back to the current working directory
  if ! cd "$CWD" 2> /dev/null ; then
    echo "bootstrap: Unable to return to the current working directory (${CWD})." 1>&2
    exit 2
  fi

  # Clean up source directories
  if [ "$keepdir" = "nokeepdir" ] ; then
    echo "==> Cleaning up source directories ..."
    name="${file#*-}"
    rmIfDir ""${tmpdir}/sources/$name*""
    unset name
  fi

  # Restore variables
  CFLAGS="$SAVED_CFLAGS"
  CXXFLAGS="$SAVED_CXXFLAGS"
  LDFLAGS="$SAVED_LDFLAGS"
done

# Final steps
case "$stage" in
  0)
    rmIfDir "${crossdir}/share/info" "${crossdir}/share/man"
    stripFiles "$crossdir"
    ;;
  1)
    rmIfDir "${rootdir}/tools/share/info" "${rootdir}/tools/share/man"
    stripFiles "${rootdir}/tools"
    ;;
esac

