./configure \
 --prefix=/usr \
 --sysconfdir=/etc \
 --libdir=/usr/lib${libSuffix} \
 --localstatedir=/var \
 --infodir=/usr/info \
 --mandir=/usr/man \
 --docdir=/usr/doc/${sourceName}-${sourceVersion} \
 --htmldir=/usr/doc/${sourceName}-${sourceVersion}/html \
 --enable-static=no \
 --enable-shared=yes \
 --enable-debug=no \
 --enable-libgnome-keyring \
 --enable-panel-plugin \
 --disable-legacy-sm \
 $BUILD_SYSTEM
