#  This program is distributed in the hope that it will be useful,
#  but WITHOUT ANY WARRANTY; without even the implied warranty of
#  MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#  GNU General Public License for more details.
#
#  You should have received a copy of the GNU General Public License
#  along with this program.  If not, see <http://www.gnu.org/licenses/>.

set -e

CWD=$(pwd)

TMP=${TMP:-/tmp/sources}
OUT=${OUT:-/tmp/packages}

V=8.5.11
SHORT_VER=8.5
ARCH=${ARCH:-x86_64}
B=1

# Flags for the compiler:
DCFLAGS=${DCFLAGS:=-mtune=generic}

# Parallel jobs for the compiler:
JOBS=${JOBS:=-j4}

PKG=${TMP}/package-tcl

rm -rf $PKG
mkdir -p $PKG $OUT

echo "Uncompressing the tarball..."
rm -rf ${TMP}/tcl${V}
lzip -cd ${CWD}/tcl${V}-src.tar.lz | tar -xvf - -C $TMP

cd ${TMP}/tcl${V}

# Set sane ownerships and permissions:
chown -R 0:0 .
find . \
 \( -perm 2777 -o \
    -perm 777  -o \
    -perm 775  -o \
    -perm 711  -o \
    -perm 555  -o \
    -perm 511     \
 \) -exec chmod 755 {} + \
  -o \
 \( -perm 666 -o \
    -perm 664 -o \
    -perm 600 -o \
    -perm 444 -o \
    -perm 440 -o \
    -perm 400    \
 \) -exec chmod 644 {} +

export CFLAGS="$DCFLAGS"

cd unix

./configure \
 --prefix=/usr \
 --libdir=/usr/lib64 \
 --enable-shared \
 --enable-threads \
 --enable-man-symlinks \
 --enable-man-compression='gzip' \
 --enable-64bit \
 --build=${ARCH}-dragora-linux-gnu

make $JOBS TCL_LIBRARY=/usr/lib64/tcl${SHORT_VER}

# The Tcl package expects that its source tree is
# preserved so that packages depending on it for
# their compilation can utilize it.  This sed
# removes the references to the build directory and
# replaces them with saner system-wide locations:
sed -i \
 -e "s@^\(TCL_SRC_DIR='\).*@\1/usr/include'@" \
 -e "/TCL_B/s@='\(-L\)\?.*unix@='\1/usr/lib64@" \
  tclConfig.sh

make install DESTDIR=$PKG TCL_LIBRARY=/usr/lib64/tcl${SHORT_VER}
make install-private-headers INSTALL_ROOT=$PKG

# Strip binaries & libraries:
( cd $PKG
  find . -type f | xargs file | awk '/ELF/ && /executable/ || /shared object/' | \
   cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null
)
strip --strip-debug ${PKG}/usr/lib64/libtclstub${SHORT_VER}.a

# Symlink compatibility:
( cd ${PKG}/usr/bin
  ln -sf tclsh${SHORT_VER} tclsh
)
( cd ${PKG}/usr/lib64
  ln -sf libtcl${SHORT_VER}.so libtcl.so
  ln -sf libtclstub${SHORT_VER}.a libtclstub.a
)

cd ..

# Add the documentation:
mkdir -p ${PKG}/usr/doc/tcl-${V}
cp -a \
 ChangeLog README changes license.terms \
 ${PKG}/usr/doc/tcl-${V}

# Copy the description files:
mkdir -p ${PKG}/description
cp ${CWD}/description/* ${PKG}/description

cd $PKG
makepkg -l ${OUT}/tcl-${V}-${ARCH}-${B}.tlz

