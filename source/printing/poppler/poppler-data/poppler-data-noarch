set -e

CWD=$(pwd)

TMP=${TMP:-/tmp/sources}
OUT=${OUT:-/tmp/packages}

V=0.4.6
ARCH=noarch
B=1

PKG=${TMP}/package-poppler-data

rm -rf $PKG
mkdir -p $PKG $OUT

echo "Uncompressing the tarball..."
rm -rf ${TMP}/poppler-data-${V}
lzip -cd ${CWD}/poppler-data-${V}.tar.lz | tar -xvf - -C $TMP

cd ${TMP}/poppler-data-${V}

# Set sane ownerships and permissions:
chown -R 0:0 .
find . \
 \( -perm 2777 -o \
    -perm 777  -o \
    -perm 775  -o \
    -perm 711  -o \
    -perm 555  -o \
    -perm 511     \
 \) -exec chmod 755 {} + \
  -o \
 \( -perm 666 -o \
    -perm 664 -o \
    -perm 600 -o \
    -perm 444 -o \
    -perm 440 -o \
    -perm 400    \
 \) -exec chmod 644 {} +

make datadir=/usr/share install DESTDIR=$PKG

# Copy the documentation:
mkdir -p ${PKG}/usr/doc/poppler-data-${V}
cp -a \
 COPYING README \
 ${PKG}/usr/doc/poppler-data-${V}

# Copy the description files:
mkdir -p ${PKG}/description
cp ${CWD}/description/* ${PKG}/description

cd $PKG
makepkg -l ${OUT}/poppler-data-${V}-${ARCH}-${B}.tlz

