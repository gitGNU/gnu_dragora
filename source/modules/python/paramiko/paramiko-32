set -e

CWD=$(pwd)

TMP=${TMP:-/tmp/sources}
OUT=${OUT:-/tmp/packages}

V=1.7.7.1
ARCH=${ARCH:-i486}
B=1

PKG=${TMP}/package-paramiko

rm -rf $PKG
mkdir -p $PKG $OUT

echo "Uncompressing the tarball..."
rm -rf ${TMP}/paramiko-${V}
lzip -cd ${CWD}/paramiko-${V}.tar.lz | tar -xvf - -C $TMP

cd ${TMP}/paramiko-${V}

# Set sane ownerships and permissions:
chown -R 0:0 .
find . \
 \( -perm 2777 -o \
    -perm 777  -o \
    -perm 775  -o \
    -perm 711  -o \
    -perm 555  -o \
    -perm 511     \
 \) -exec chmod 755 {} + \
  -o \
 \( -perm 666 -o \
    -perm 664 -o \
    -perm 600 -o \
    -perm 444 -o \
    -perm 440 -o \
    -perm 400    \
 \) -exec chmod 644 {} +

python setup.py install \
 --prefix=/usr \
 --root=$PKG

# Add the documentation:
mkdir -p ${PKG}/usr/doc/paramiko-${V}
cp -a \
 LICENSE PKG-INFO README \
 ${PKG}/usr/doc/paramiko-${V}

# Copy the description files:
mkdir -p ${PKG}/description
cp ${CWD}/description/?? ${PKG}/description

cd $PKG
makepkg -l ${OUT}/paramiko-${V}-${ARCH}-${B}.tlz

