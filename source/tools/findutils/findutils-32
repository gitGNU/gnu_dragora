#  along with this program.  If not, see <http://www.gnu.org/licenses/>.

set -e

CWD=$(pwd)

TMP=${TMP:-/tmp/sources}
OUT=${OUT:-/tmp/packages}

V=4.4.2
ARCH=${ARCH:-i486}
B=1

# Flags for the compiler:
DCFLAGS=${DCFLAGS:=-O2 -march=i486 -mtune=i686}

# Parallel jobs for the compiler:
JOBS=${JOBS:=-j4}

PKG=${TMP}/package-findutils

rm -rf $PKG
mkdir -p $PKG $OUT

echo "Uncompressing the tarball..."
rm -rf ${TMP}/findutils-${V}
tar xvf ${CWD}/findutils-${V}.tar.lz -C $TMP

cd ${TMP}/findutils-${V}

# Set sane ownerships and permissions:
chown -R 0:0 .
find . \
 \( -perm 2777 -o \
    -perm 777  -o \
    -perm 775  -o \
    -perm 711  -o \
    -perm 555  -o \
    -perm 511     \
 \) -exec chmod 755 {} + \
  -o \
 \( -perm 666 -o \
    -perm 664 -o \
    -perm 600 -o \
    -perm 444 -o \
    -perm 440 -o \
    -perm 400    \
 \) -exec chmod 644 {} +

CFLAGS="$DCFLAGS" \
./configure \
 --prefix=/usr \
 --bindir=/bin \
 --infodir=/usr/info \
 --mandir=/usr/man \
 --libexecdir=/usr/libexec/findutils \
 --build=${ARCH}-dragora-linux-gnu

make $JOBS
if [[ -n $CHECK ]]; then
  make check;
fi
make install DESTDIR=$PKG

# Use "slocate" instead of "locate":
rm -f \
 ${PKG}/bin/{locate,updatedb} \
 ${PKG}/usr/libexec/findutils/{bigram,code,frcode} \
 ${PKG}/usr/man/man1/{locate,updatedb}.1 \
 ${PKG}/usr/man/man5/locatedb.5

# Delete empty directories (/var and /usr/man/man5 ...):
find ${PKG} -type d -empty | xargs rmdir || true

# Strip binaries & libraries:
( cd $PKG
  find . -type f | xargs file | awk '/ELF/ && /executable/ || /shared object/' | \
   cut -f 1 -d : | xargs strip -s 2> /dev/null
)

# Compress manuals (.info documents and man-pages):
( cd ${PKG}/usr ; rm -f info/dir ; gzip -9N info/* man/man?/* )

# Add the documentation:
mkdir -p ${PKG}/usr/doc/findutils-${V}
cp -a \
 ABOUT-NLS AUTHORS COPYING ChangeLog NEWS README TODO THANKS \
 ${PKG}/usr/doc/findutils-${V}

# Copy the description files:
mkdir -p ${PKG}/description
cp ${CWD}/description/* ${PKG}/description

cd $PKG
makepkg -l ${OUT}/findutils-${V}-${ARCH}-${B}.tlz

