# Essential symlinks for $ROOT
for file in bash cat echo file pwd stty ; do
  ln -sf /tools/bin/${file} ${ROOT}/bin
done
ln -sf /tools/bin/perl ${ROOT}/usr/bin

ln -sf /proc/self/mounts ${ROOT}/etc/mtab

ln -sf /tools/lib/libstdc++.a ${ROOT}/usr/lib
sed -e \
 's/tools/usr/' /tools/lib/libstdc++.la > ${ROOT}/usr/lib/libstdc++.la

ln -sf bash ${ROOT}/bin/sh

