# Essential symlinks for $ROOT
for file in bash cat echo file pwd perl ; do
  ln -sf /tools/bin/${file} ${ROOT}/executable
done
ln -sf /tools/bin/gcc ${ROOT}/executable/cc
ln -sf /kernel/process/mounts ${ROOT}/config/mtab

ln -sf /tools/library/libstdc++.a ${ROOT}/library
sed 's/tools/usr/' /tools/library/libstdc++.la \
 > ${ROOT}/library/libstdc++.la

ln -sf bash ${ROOT}/executable/sh

