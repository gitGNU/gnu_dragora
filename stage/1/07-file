version=5.11

# Uncompression
rm -rf ${TMPDIR}/file-${version}
tar xf ${SRCDIR}/file-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/file-${version}

CC="gcc -D_GNU_SOURCE -D_BSD_SOURCE" \
./configure \
 --prefix=/tools \
 --libdir=/tools/library \
 --disable-fsect-man5

make $jobs V=1
make install

