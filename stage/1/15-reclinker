version=71d703298aa0577ccb228da763866994f6c74f8e

# Uncompression
rm -rf ${TMPDIR}/reclinker-${version}
tar xf ${SRCDIR}/reclinker-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/reclinker-${version}

sh make.sh CFLAGS="$flags -static" CPPFLAGS="-I/tools/include"
install -m 755 reclinker /tools/bin

