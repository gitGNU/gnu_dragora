version=2.7.1

# Uncompression
rm -rf ${TMPDIR}/patch-${version}
tar xf ${SRCDIR}/patch-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/patch-${version}

LDFLAGS="-Wl,-static" \
CPPFLAGS="-I/tools/include" \
./configure --prefix=/tools \
 gl_cv_func_working_mktime=yes

make $jobs
make install

