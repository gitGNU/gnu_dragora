version=3.82

# Uncompression
rm -rf ${TMPDIR}/make-${version}
tar xf ${SRCDIR}/make-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/make-${version}

CC="gcc -static -D_GNU_SOURCE -I/tools/include" \
./configure --prefix=/tools --disable-nls

make $jobs
make install

