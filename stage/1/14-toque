version=0.1-pre21

# Uncompression
rm -rf ${TMPDIR}/toque-${version}
tar xf ${SRCDIR}/toque-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/toque-${version}

./configure \
 CXXFLAGS="$flags -static" CPPFLAGS="-I/tools/include" \
  --prefix=/tools

make $jobs
make install

cat ${ARCHIVE}/toque/etc/toquerc > /tools/etc/toquerc

