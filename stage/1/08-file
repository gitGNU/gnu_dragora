version=5.15

# Uncompression
rm -rf ${TMPDIR}/file-${version}
tar xf ${SRCDIR}/file-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/file-${version}

CFLAGS="$flags -D_GNU_SOURCE -D_BSD_SOURCE" \
LDFLAGS="-Wl,-static" \
CPPFLAGS="-I/tools/include" \
./configure \
 --prefix=/tools \
 --libdir=/tools/lib \
 --disable-fsect-man5 \
 --disable-shared

make $jobs V=1
make install

