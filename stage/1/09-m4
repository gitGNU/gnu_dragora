version=1.4.16

# Uncompression
rm -rf ${TMPDIR}/m4-${version}
tar xf ${SRCDIR}/m4-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/m4-${version}

# Fix a gnulib error in order to build against Musl
for file in freadahead.c fseterr.c ; do
  rm -f lib/$file
  touch lib/$file
done
echo "void close_stdin(void) {}" > lib/closein.c

./configure \
 --prefix=/tools \
 --libdir=/tools/library

make $jobs
make install

