version=0.1-pre19

# Uncompression
rm -rf ${TMPDIR}/chef-${version}
tar xf ${SRCDIR}/chef-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/chef-${version}

./configure CXXFLAGS="$CXXFLAGS -static" CPPFLAGS="-I/tools/include" \
 --prefix=/tools \
 --sysconfdir=/tools/config

make $jobs
make install

cat ${ARCHIVE}/config/chefrc > /tools/config/chefrc

