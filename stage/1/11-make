version=3.82

# Uncompression
rm -rf ${TMPDIR}/make-${version}
tar xf ${SRCDIR}/make-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/make-${version}

CFLAGS="$CFLAGS -D_GNU_SOURCE" \
LDFLAGS="-Wl,-static" \
CPPFLAGS="-I/tools/include" \
./configure --prefix=/tools --disable-nls

make $jobs
make install

# Add symlink compatibility
ln -sf /tools/bin/make /tools/bin/gmake

