version=4.1.1

# Uncompression
rm -rf ${TMPDIR}/gawk-${version}
tar xf ${SRCDIR}/gawk-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/gawk-${version}

LDFLAGS="-Wl,-static" \
CPPFLAGS="-I/tools/include" \
./configure \
 --prefix=/tools \
 --libexecdir=/tools/lib \
 --enable-static \
 --disable-shared \
 --disable-nls \
 --without-libintl-prefix \
 --without-libsigsegv-prefix \
 ac_cv_func_working_mktime=yes

make $jobs
make install

