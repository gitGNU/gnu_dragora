version=4.1.0

# Uncompression
rm -rf ${TMPDIR}/gawk-${version}
tar xf ${SRCDIR}/gawk-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/gawk-${version}

LDFLAGS="-Wl,-static" \
CPPFLAGS="-I/tools/include" \
./configure \
 --prefix=/tools \
 --libexecdir=/tools/lib \
 --disable-nls

make $jobs
make install

