echo "Uncompressing structure of directories ..."

if [ ! -f ${ARCHIVE}/_hierarchyfs.tar.gz ] ; then
  echo "${ARCHIVE}/_hierarchyfs.tar.gz is not a regular file."
  exit 1
fi

# To check the integrity before the decompression
tar tf ${ARCHIVE}/_hierarchyfs.tar.gz > /dev/null || exit $?

cd $ROOT && tar xpf ${ARCHIVE}/_hierarchyfs.tar.gz

