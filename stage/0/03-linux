version=3.4.51

# Uncompression
rm -rf ${TMPDIR}/linux-${version}
tar xf ${SRCDIR}/linux-libre-${version}-gnu1.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/linux-${version}

# Uncomment this line to patch a non-POSIX signal
# used in the script vmlinux.sh (only valid in
# some kernel versions)
#patch -Np0 -i ${PATCHDIR}/linux/linux-headers-vmlinux.sh

make mrproper
make headers_check
make INSTALL_HDR_PATH=/tools headers_install

