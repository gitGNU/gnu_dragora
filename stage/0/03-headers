version=3.7

# Uncompression
rm -rf ${TMPDIR}/linux-${version}
tar xf ${SRCDIR}/linux-libre-${version}-gnu.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/linux-${version}

zcat ${PATCHDIR}/linux-headers-vmlinux.sh.gz | patch -p0

make mrproper
make headers_check
make INSTALL_HDR_PATH=/tools headers_install

