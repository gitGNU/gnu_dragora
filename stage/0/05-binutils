version=2.23.1

# Uncompression
rm -rf ${TMPDIR}/binutils-${version}
tar xf ${SRCDIR}/binutils-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/binutils-${version}

rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

CC="${TARGET}-gcc -D_GNU_SOURCE" \
AR="${TARGET}-ar" \
RANLIB="${TARGET}-ranlib" \
../binutils-${version}/configure \
 --prefix=/tools \
 --libdir=/tools/library \
 --with-lib-path=/tools/library \
 --disable-werror \
 --disable-nls \
 --disable-ppl-version-check \
 --disable-cloog-version-check

make $jobs && make install

# Re-adjust the linker for the Stage 1
make -C ld clean
make -C ld LIB_PATH=/library
cp -f ld/ld-new /tools/bin

