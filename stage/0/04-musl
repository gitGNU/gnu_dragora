version=0.9.9

# Uncompression
rm -rf ${TMPDIR}/musl-${version}
tar xf ${SRCDIR}/musl-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/musl-${version}

CROSS_COMPILE="${TARGET}-" \
./configure \
 --prefix=/tools \
 --libdir=/tools/library \
 --syslibdir=/tools/library

make $jobs
make install

