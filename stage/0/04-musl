version=0.9.15

# Uncompression
rm -rf ${TMPDIR}/musl-${version}
tar xf ${SRCDIR}/musl-${version}.tar.?z* -C $TMPDIR

# Build
cd ${TMPDIR}/musl-${version}

CROSS_COMPILE="${TARGET}-" \
./configure \
 --prefix=/tools \
 --libdir=/tools/lib \
 --syslibdir=/tools/lib \
 --enable-optimize=size \
 --enable-debug

make $jobs
make install

