# Autodetermine the path of /tools
if [ ! -L /tools ]; then
  echo "Cannot determine \$ROOT. The symlink \"/tools\" doesn't exists."
  exit 1
fi
if [ -L /tools ] && [ ! -e /tools ]; then
  echo "/tools is a dangling symlink."
  exit 1
fi
ROOT=$(readlink /tools | sed 's/\/tools//')

set -e;  ## Exit on any error

echo "Mounting virtual file systems ..."
mount -n -v --bind /dev ${ROOT}/kernel/devices
mount -n -v -t devpts devpts ${ROOT}/kernel/devices/pts
mount -n -v -t tmpfs shm ${ROOT}/kernel/devices/shm
mount -n -v -t proc proc ${ROOT}/kernel/process
mount -n -v -t sysfs sysfs ${ROOT}/kernel/objects

echo "Mounting directories ..."
mkdir -p \
 ${ROOT}/storage/dragora/archive \
 ${ROOT}/storage/dragora/patches \
 ${ROOT}/storage/dragora/recipes \
 ${ROOT}/storage/dragora/sources
mount -n -v --bind "$(pwd)/archive" ${ROOT}/storage/dragora/archive
mount -n -v --bind "$(pwd)/patches" ${ROOT}/storage/dragora/patches
mount -n -v --bind "$(pwd)/recipes" ${ROOT}/storage/dragora/recipes
mount -n -v --bind "$(pwd)/sources" ${ROOT}/storage/dragora/sources

echo "Entering chroot (${ROOT})..."
chroot $ROOT /tools/bin/env -i \
 PATH=/executable:/tools/bin \
 SHELL=/executable/sh \
 TERM="$TERM" \
 PS1='\u:\w\$ ' \
 HOME=/users/root \
 LC_ALL=POSIX \
 /executable/sh --login

umount ${ROOT}/kernel/devices/pts
umount ${ROOT}/kernel/devices/shm
umount ${ROOT}/kernel/devices
umount ${ROOT}/kernel/process
umount ${ROOT}/kernel/objects
umount ${ROOT}/storage/dragora/archive
umount ${ROOT}/storage/dragora/patches
umount ${ROOT}/storage/dragora/recipes
umount ${ROOT}/storage/dragora/sources

echo

