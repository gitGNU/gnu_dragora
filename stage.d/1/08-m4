version=1.4.17

echo "Unpacking m4-${version} ..."
rm -rf "${tmpdir}"/sources/m4-${version}
tar xf "${worktree}"/sources/m4-${version}.tar.bz2 -C "${tmpdir}"/sources

# Build instructions
cd "${tmpdir}"/sources/m4-${version}

cp -f "${worktree}"/patches/common/config.guess build-aux/config.guess
cp -f "${worktree}"/patches/common/config.sub build-aux/config.sub

patch -Np1 -i "${worktree}"/patches/m4/update-freadahead

# Import and export toolchain variables
. "${worktree}"/stage.d/env.d/cross-env

./configure \
 --prefix=/tools \
 --build=$host \
 --host=$TARGET \
 ac_cv_libsigsegv=no

make -j${jobs}
make install

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

