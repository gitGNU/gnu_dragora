version=1.0-pre1

echo "Unpacking make-${version} ..."
rm -rf "${tmpdir}"/sources/qi-${version}
tar xf "${worktree}"/sources/qi-${version}.tar.lz -C "${tmpdir}"/sources

# Build instructions
cd "${tmpdir}"/sources/qi-${version}

make prefix=/tools
make prefix=/tools install

