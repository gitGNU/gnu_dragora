version=4.1.3

echo "Unpacking gawk-${version} ..."
rm -rf "${tmpdir}"/sources/gawk-${version}
tar xf "${worktree}"/sources/gawk-${version}.tar.lz -C "${tmpdir}"/sources

# Build instructions
cd "${tmpdir}"/sources/gawk-${version}

# Import and export toolchain variables
. "${worktree}"/stage.d/env.d/cross-env

./configure \
 --prefix=/tools \
 --build=$host \
 --host=$TARGET \
 --disable-nls \
 --without-libintl-prefix \
 --without-libsigsegv-prefix \
 ac_cv_func_working_mktime=yes

make -j${jobs}
make install

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

