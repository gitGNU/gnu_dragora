program=linux
version=4.1.10
release=1
pkgname=linux-headers
strip=nostrip

tarname=${program}-libre-${version}-gnu.tar.lz

description="
linux-headers - The GNU Linux libre kernel headers.

The GNU Linux libre kernel headers.

"

homepage=http://www.fsfla.org/ikiwiki/selibre/linux-libre
licenses=GPLv2+

# Remote source(s)
fetch=(
  http://linux-libre.fsfla.org/pub/linux-libre/releases/${version}-gnu/$tarname
)

build() {
  cd "$srcdir"

  make mrproper
  make headers_check
  make INSTALL_HDR_PATH="${destdir}"/usr headers_install

  # Remove cruft
  find "${destdir}"/usr/include \
   -type f \( -name .install -o -name ..install.cmd \) -exec rm -f '{}' +
}

