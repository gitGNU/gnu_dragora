program = pkg-config
version = 0.27.1
release = 1

tarname = ${program}-${version}.tar.bz2
tardir = /storage/dragora/sources
jobs = 1

docs = AUTHORS COPYING ChangeLog NEWS README
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

CC="gcc -static -D_GNU_SOURCE -D_BSD_SOURCE" \
CFLAGS="$flags" \
./configure $configure_args \
 --docdir=/documents/${program}-${version} \
 --with-system-include-path=/include \
 --with-system-library-path=/library \
 --with-pc-path=/library/pkgconfig \
 --with-internal-glib \
 --disable-shared

make -j${jobs}
make install DESTDIR=$destdir

gzip -9 ${destdir}/documents/man/man1/pkg-config.1 ;	# Compress manual page

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

