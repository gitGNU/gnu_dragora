program = sed
version = 4.2.1
release = 1

tarname = ${program}-${version}.tar.bz2
tardir = /storage/dragora/sources
jobs = 1

docs = AUTHORS BUGS COPYING ChangeLog NEWS README THANKS
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

CC="gcc -static" CFLAGS="$flags" \
./configure $configure_args --disable-nls --disable-i18n

make -j${jobs}
make install DESTDIR=$destdir

rm -f ${destdir}/documents/info/dir ;		# Redundancy
gzip -9 ${destdir}/documents/info/* ;		# Compress .info documents
gzip -9 ${destdir}/documents/man/man1/sed.1 ;	# Compress manual page

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

