program = toque
version = 0.1-pre22
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING ChangeLog NEWS README
destdir = /pkg/${program}-${version}
docdir = ${destdir}/share/doc/${program}-${version}

[build]
cd $srcdir

./configure $configure_args CXXFLAGS="$flags" LDFLAGS="-Wl,-static"

make -j${jobs}
make install DESTDIR=$destdir

# Add our custom config
install -D -m 644 ${archive}/toque/etc/toquerc ${destdir}/etc/toquerc

rm -f ${destdir}/share/info/dir ;		# Redundancy
gzip -9 ${destdir}/share/info/toque.info ;	# Compress .info documents
gzip -9 ${destdir}/share/info/toque_es.info ;
gzip -9 ${destdir}/share/man/man1/toque.1 ;	# Compress manual page

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /pkg/${program}-${version} /

