program = pkgconf
version = 0.9.2
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING README*
destdir = /pkg/${program}-${version}
docdir = /share/doc/${program}-${version}

build {
  cd $srcdir

  CFLAGS="$flags" LDFLAGS="-Wl,-static" \
  ./configure $configure_args --with-pkg-config-dir=/lib/pkgconfig

  make -j${jobs}
  make install DESTDIR=$destdir

  # Make symlink compatibility
  ln -sf pkgconf ${destdir}/bin/pkg-config

  # Copy the documentation
  mkdir -p ${destdir}${docdir} && cp -a $docs ${destdir}${docdir}

  reclinker -rf /pkg/${program}-${version} /
}

