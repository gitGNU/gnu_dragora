program = binutils
version = 2.23.1
release = 1

tarname = ${program}-${version}.tar.lz
tardir = /storage/dragora/sources
jobs = 1

docs = COPYING* README
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

machine_type = $$(gcc -dumpmachine)

[build]
cd $srcdir

# Suppress the installation of the outdated standards.info file,
# the newer one is provided by autoconf
rm -f etc/standards.info
sed -i '/^INFO/s/standards.info //' etc/Makefile.in

rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

CC="gcc -D_GNU_SOURCE" \
CFLAGS="$flags" \
../${program}-${version}/configure LDFLAGS="--static" $configure_args \
 --with-docdir=/documents/${program}-${version} \
 --with-lib-path=/library \
 --disable-shared \
 --disable-multilib \
 --disable-werror \
 --disable-nls

make -j${jobs} tooldir=/${machine_type}
make -k check
make tooldir=/${machine_type} install DESTDIR=$destdir

if [ -d ${destdir}/lib64 ]; then \
  ( cd $destdir ; \
    mkdir -p library ; \
    mv lib64/* library/ ; \
    rmdir lib64 || : ; \
  ) ; \
fi

# Include the libiberty header
mkdir -p ${destdir}/include && \
cp -p ../binutils-${version}/include/libiberty.h ${destdir}/include

# Replace hard-links
( cd ${destdir}/executable && \
  rm -f ld ; ln -sf ld.bfd ld ; \
)
( cd ${destdir}/${machine_type}/bin && \
  for file in * ; do \
    if [ -x ../../executable/$$file ]; then \
      rm -f $$file && ln -s ../../executable/$$file . ; \
    fi ; \
  done ; \
)

# Compress info documents (if needed)
if [ -d ${destdir}/documents/info ] ; then \
  rm -f ${destdir}/documents/info/dir && \
  gzip -9 ${destdir}/documents/info/* ; \
fi

# Compress and link manual pages (if needed)
if [ -d ${destdir}/documents/man ] ; then \
  ( cd ${destdir}/documents/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Copy the documentation
( mkdir -p $docdir ; \
  cd ${tmpdir}/${program}-${version} && \
  cp -a $docs $docdir ; \
)

# Delete temporary build directory
#cd $tmpdir && rm -rf binutils-build

reclinker -rf /package/${program}-${version} /

