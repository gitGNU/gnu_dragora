program = musl
version = 20130310
release = 1

tarname = ${program}-${version}.tar.lz
tardir = /storage/dragora/sources
jobs = 1

[build]
cd $srcdir

./configure $configure_args --syslibdir=/library

make -j${jobs}
make install

# Adjust the toolchain (if necessary)
if [ -x /tools/bin/adjust-toolchain ]; then \
  /tools/bin/adjust-toolchain ; \
fi

