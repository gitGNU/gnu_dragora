program = psmisc
version = 22.20
release = 1

tarname = ${program}-${version}.tar.bz2
tardir = /storage/dragora/sources
patchdir = /storage/dragora/patches
jobs = 1

docs = AUTHORS COPYING NEWS README
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

patch -Np0 -i ${patchdir}/psmisc-pstree.c

CC="gcc -static" CFLAGS="$flags" ./configure $configure_args

make -j${jobs}
make install DESTDIR=$destdir

gzip -9 ${destdir}/documents/man/man1/* ;	# Compress manual pages

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

