program = psmisc
version = 22.20
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING NEWS README
destdir = /pkg/${program}-${version}
docdir = ${destdir}/share/doc/${program}-${version}

[build]
cd $srcdir

patch -Np0 -i ${patchdir}/psmisc/psmisc-pstree.c

CFLAGS="$flags" LDFLAGS="-Wl,-static" \
./configure $configure_args

make -j${jobs}
make install DESTDIR=$destdir

gzip -9 ${destdir}/share/man/man1/* ;	# Compress manual pages

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /pkg/${program}-${version} /

