program = bash
version = 4.2
release = 1

tarname = ${program}-${version}.tar.lz
tardir = /storage/dragora/sources
patchdir = /storage/dragora/patches
jobs = 1

docs = AUTHORS CHANGES COMPAT COPYING NEWS NOTES POSIX RBASH README Y2K doc/FAQ doc/INTRO
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

# Apply patches from the upstream
for file in ${patchdir}/bash/* ; do \
  if [ -f $$file ]; then \
    patch -p0 < $$file ; \
  fi ; \
done

CFLAGS="$flags" \
LDFLAGS="--static" \
./configure $configure_args \
 --with-installed-readline \
 --with-curses \
 --without-bash-malloc \
 --disable-nls \
 ac_cv_func_mbsnrtowcs=no

make -j${jobs}
make install DESTDIR=$destdir

# Make symlink compatibility:
( cd ${destdir}/executable && ln -sf bash sh )

# Compress info documents (if needed)
if [ -d ${destdir}/documents/info ] ; then \
  rm -f ${destdir}/documents/info/dir && \
  gzip -9 ${destdir}/documents/info/* ; \
fi

# Compress and link manual pages (if needed)
if [ -d ${destdir}/documents/man ] ; then \
  ( cd ${destdir}/documents/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

