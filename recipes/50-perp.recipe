program = perp
version = 2.07
release = 1

tarname = ${program}-${version}.tar.lz

docs = CHANGES LICENSE README THANKS examples/
destdir = /pkg/${program}-${version}
docdir = /share/doc/${program}-${version}

[build]
cd $srcdir

# Use custom flags and dir locations
patch -Np0 -i ${patchdir}/perp/perp-conf.mk

make
make install DESTDIR=$destdir

# Automatic installation setup
DESTDIR=$destdir ./perp/perp-setup /etc/rc.d/services

# We don't include perp-setup
rm -f ${destdir}/sbin/perp-setup ${destdir}/share/man/man8/perp-setup.8

# Make symlink compatibility
( cd ${destdir}/etc ; ln -s rc.d/services perp ; )

# Compress and link manual pages (if needed)
if [ -d ${destdir}/share/man ] ; then \
  ( cd ${destdir}/share/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Copy the documentation
mkdir -p ${destdir}${docdir} && cp -a $docs ${destdir}${docdir}

reclinker -rf /package/${program}-${version} /

