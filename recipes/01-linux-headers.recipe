program = linux
version = 3.4.39
release = 1

tarname = ${program}-libre-${version}-gnu.tar.lz
tardir = /storage/dragora/sources
patchdir = /storage/dragora/patches

destdir = /package/${program}-headers-${version}

[build]
cd $srcdir

#patch -Np0 -i ${patchdir}/linux-headers-vmlinux.sh

make mrproper
make headers_check
make INSTALL_HDR_PATH=$destdir headers_install

reclinker -rf /package/${program}-headers-${version} /

