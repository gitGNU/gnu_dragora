program = util-linux
version = 2.22.2
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING ChangeLog NEWS README*
destdir = /pkg/${program}-${version}
docdir = ${destdir}/share/doc/${program}-${version}

[build]
cd $srcdir

# Don't build cpuset, has specific code for Glibc
patch -Np0 -i ${patchdir}/util-linux/util-linux-no_cpuset

# The minix support is giving errors with Musl
patch -Np0 -i ${patchdir}/util-linux/util-linux-no_minix

# To work with agetty and blkid
cat ${archive}/util-linux/include/ttydefaults.h > include/ttydefaults.h
patch -Np0 -i ${patchdir}/util-linux/util-linux-ttyutils.h

# More patches in order to work with Musl
patch -Np0 -i ${patchdir}/util-linux/util-linux-cfdisk_sighandler
patch -Np0 -i ${patchdir}/util-linux/util-linux-display.c
patch -Np0 -i ${patchdir}/util-linux/util-linux-pg.c

# Change the path location for adjtime
sed -i 's@etc/adjtime@config/adjtime@g' $$(grep -rl '/etc/adjtime' .)

CFLAGS="$flags -Dversionsort=alphasort -D__GNU_LIBRARY__=5 -DMAXNAMLEN=255" \
LDFLAGS="-Wl,-static" \
./configure $configure_args \
 --enable-fs-paths-default=/bin \
 --enable-libuuid \
 --enable-libblkid \
 --enable-libmount \
 --enable-static \
 --disable-shared \
 --disable-su \
 --disable-sulogin \
 --disable-login \
 --disable-schedutils \
 --disable-utmpdump \
 --disable-mesg \
 --disable-kill \
 --disable-eject \
 --disable-use-tty-group \
 --enable-arch \
 --enable-reset \
 --enable-write

make -j${jobs} V=1
make install usrbin_execdir=/bin \
             usrsbin_execdir=/sbin \
             DESTDIR=$destdir

# Create empty directory for uuidd
mkdir -p ${destdir}/var/uuidd

# Compress and link manual pages (if needed)
if [ -d ${destdir}/share/man ] ; then \
  ( cd ${destdir}/share/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /pkg/${program}-${version} /

