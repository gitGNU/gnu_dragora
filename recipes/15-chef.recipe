program = chef
version = 0.1-pre19
release = 1

tarname = ${program}-${version}.tar.lz
tardir = /storage/dragora/sources
archive = /storage/dragora/archive
jobs = 1

docs = AUTHORS COPYING ChangeLog NEWS README
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

./configure $configure_args CXX="g++ -static" CXXFLAGS="$flags"

make -j${jobs}
make install DESTDIR=$destdir

# Add our custom config
mkdir -p ${destdir}/config
zcat ${archive}/chefrc.gz > ${destdir}/config/chefrc

rm -f ${destdir}/documents/info/dir ;		# Redundancy
gzip -9 ${destdir}/documents/info/chef.info ;	# Compress .info documents
gzip -9 ${destdir}/documents/man/man1/chef.1 ;	# Compress manual page

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

