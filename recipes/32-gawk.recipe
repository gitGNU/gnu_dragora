program = gawk
version = 4.0.2
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING ChangeLog FUTURES LIMITATIONS NEWS POSIX.STD PROBLEMS README
destdir = /pkg/${program}-${version}
docdir = ${destdir}/share/doc/${program}-${version}

[build]
cd $srcdir

CFLAGS="$flags" LDFLAGS="-Wl,-static" \
./configure $configure_args --disable-nls

make -j${jobs}
make install DESTDIR=$destdir

# Replace hard links with soft links
( cd ${destdir}/bin && \
  mv gawk gawk-${version} && \
  ln -sf gawk-${version} gawk ; \
  mv pgawk pgawk-${version} && \
  ln -sf pgawk-${version} pgawk ; \
)

# Compress info documents (if needed)
if [ -d ${destdir}/share/info ] ; then \
  rm -f ${destdir}/share/info/dir && \
  gzip -9 ${destdir}/share/info/* ; \
fi

# Compress and link manual pages (if needed)
if [ -d ${destdir}/share/man ] ; then \
  ( cd ${destdir}/share/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Add some links
( cd ${destdir}/share/man/man1 && \
  ln -sf gawk.1.gz awk.1.gz ; \
  ln -sf gawk.1.gz pgawk.1.gz ; \
)

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /pkg/${program}-${version} /

