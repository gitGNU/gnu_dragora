program = gawk
version = 4.1.0
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = AUTHORS COPYING ChangeLog NEWS POSIX.STD README TODO
destdir = /pkg/${program}-${version}
docdir = /share/doc/${program}-${version}

build {
  cd $srcdir

  CFLAGS="$flags" LDFLAGS="-Wl,-static" \
  ./configure $configure_args \
   --enable-static \
   --disable-shared \
   --disable-nls \
   --without-libintl-prefix \
   --without-libsigsegv-prefix \
   ac_cv_func_working_mktime=yes

  make -j${jobs}
  make install DESTDIR=$destdir

  # Replace hard link with soft link
  ( cd ${destdir}/bin && \
    mv gawk gawk-${version} && \
    ln -sf gawk-${version} gawk ; \
  )

  # Compress info documents (if needed)
  if [ -d ${destdir}/share/info ] ; then \
    rm -f ${destdir}/share/info/dir && \
    gzip -9 ${destdir}/share/info/* ; \
  fi

  # Compress and link manual pages (if needed)
  if [ -d ${destdir}/share/man ] ; then \
    ( cd ${destdir}/share/man && \
      find . -type f -exec gzip -9 {} \; && \
      find . -type l | while read file ; do \
        ln -sf $$(readlink $$file).gz $${file}.gz && \
        rm $$file ; \
      done ; \
    ) ; \
  fi

  # To compatibility
  ln -sf gawk.1.gz ${destdir}/share/man/man1/awk.1.gz

  # Copy the documentation
  mkdir -p ${destdir}${docdir} && cp -a $docs ${destdir}${docdir}

  reclinker -rf /pkg/${program}-${version} /
}

