program = zlib
version = 1.2.7
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = ChangeLog FAQ README doc/*.txt
destdir = /pkg/${program}-${version}
docdir = ${destdir}/share/doc/${program}-${version}

[build]
cd $srcdir

CFLAGS="$flags" \
./configure \
 --prefix='' \
 --libdir=/lib \
 --includedir=/include \
 --static

make -j${jobs}
make install DESTDIR=$destdir

# Compress and link manual pages (if needed)
if [ -d ${destdir}/share/man ] ; then \
  ( cd ${destdir}/share/man && \
    find . -type f -exec gzip -9 {} \; && \
    find . -type l | while read file ; do \
      ln -sf $$(readlink $$file).gz $${file}.gz && \
      rm $$file ; \
    done ; \
  ) ; \
fi

# Copy the documentation
mkdir -p $docdir
cp -a $docs $docdir

reclinker -rf /pkg/${program}-${version} /

