program = ncurses
version = 5.9
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = ANNOUNCE AUTHORS NEWS README TO-DO
destdir = /pkg/${program}-${version}
docdir = /share/doc/${program}-${version}

[build]
cd $srcdir

CFLAGS="$flags -D_GNU_SOURCE" \
CXXFLAGS="$flags -D_GNU_SOURCE" \
./configure $configure_args \
 --without-debug \
 --without-shared \
 --without-ada \
 --with-normal \
 --enable-overwrite \
 --enable-symlinks \
 --enable-widec

make -j${jobs}
make install DESTDIR=$destdir

# Many applications still expect the linker to be able
# to find non-wide-character ncurses libraries
for name in ncurses form panel menu ; do \
    ln -sf lib$${name}w.a ${destdir}/lib/lib$${name}.a ; \
done
ln -sf libncurses++w.a ${destdir}/lib/libncurses++.a

# Make sure that old applications that look for -lcurses
ln -sf libncursesw.a ${destdir}/lib/libcursesw.a
ln -sf libncurses.a ${destdir}/lib/libcurses.a

# Copy the documentation
mkdir -p ${destdir}${docdir} && cp -a $docs ${destdir}${docdir}

reclinker -rf /pkg/${program}-${version} /

