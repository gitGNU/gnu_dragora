program = ncurses
version = 5.9
release = 1

tarname = ${program}-${version}.tar.lz
tardir = /storage/dragora/sources
jobs = 1

docs = ANNOUNCE AUTHORS NEWS README TO-DO
destdir = /package/${program}-${version}
docdir = ${destdir}/documents/${program}-${version}

[build]
cd $srcdir

CC="gcc -D_GNU_SOURCE" \
CFLAGS="$flags" \
CXXFLAGS="$flags" \
./configure $configure_args \
 --without-debug \
 --without-shared \
 --without-ada \
 --with-normal \
 --enable-overwrite \
 --enable-symlinks \
 --enable-widec

make -j${jobs}
make install DESTDIR=$destdir

# Many applications still expect the linker to be able
# to find non-wide-character ncurses libraries
for name in ncurses form panel menu ; do \
    ln -sf lib$${name}w.a ${destdir}/library/lib$${name}.a ; \
done
ln -sf libncurses++w.a ${destdir}/library/libncurses++.a

# Make sure that old applications that look for -lcurses
ln -sf libncursesw.a ${destdir}/library/libcursesw.a
ln -sf libncurses.a ${destdir}/library/libcurses.a

# Copy the documentation
mkdir -p $docdir && cp -a $docs $docdir

reclinker -rf /package/${program}-${version} /

