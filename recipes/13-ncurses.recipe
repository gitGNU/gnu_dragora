program = ncurses
version = 5.9
release = 1

tarname = ${program}-${version}.tar.lz
jobs = 1

docs = ANNOUNCE AUTHORS NEWS README TO-DO
destdir = /pkg/${program}-${version}
docdir = /share/doc/${program}-${version}

build {
  cd $srcdir

  CFLAGS="$flags -D_GNU_SOURCE" \
  CXXFLAGS="$flags -D_GNU_SOURCE" \
  ./configure $configure_args \
   --without-debug \
   --without-ada \
   --with-normal \
   --with-shared \
   --enable-pc-files \
   --enable-widec

  make -j${jobs}
  make install DESTDIR=$destdir

  # Many applications still expect the linker to be able
  # to find non-wide-character ncurses libraries
  for name in ncurses form panel menu ; do \
    rm -f ${destdir}/lib/lib$${name}.so ; \
    echo "INPUT(-l$${name}w)" > ${destdir}/lib/lib$${name}.so ; \
    ln -sf lib$${name}w.a ${destdir}/lib/lib$${name}.a ; \
    ln -sf $${name}w.pc   ${destdir}/lib/pkgconfig/$${name}.pc ; \
  done
  ln -sf libncurses++w.a  ${destdir}/lib/libncurses++.a

  # Backward compatibility for old applications that look for -lcurses
  rm -f ${destdir}/lib/libcursesw.so
  ( cd ${destdir}/lib ; \
    echo "INPUT(-lncursesw)" > libcursesw.so ; \
    ln -sf libncurses.so libcurses.so ; \
    ln -sf libncursesw.a libcursesw.a ; \
    ln -sf libncurses.a  libcurses.a ; \
  )

  # Copy the documentation
  mkdir -p ${destdir}${docdir}
  cp -a $docs ${destdir}${docdir}

  # Build the extra support for some required applications
  make distclean

  CFLAGS="$flags -D_GNU_SOURCE" \
  CXXFLAGS="$flags -D_GNU_SOURCE" \
  ./configure $configure_args \
   --with-shared \
   --without-normal \
   --without-debug \
   --without-ada \
   --without-cxx-binding

  make sources libs
  cp -p lib/lib*.so.5* ${destdir}/lib

  reclinker -rf /pkg/${program}-${version} /
}

