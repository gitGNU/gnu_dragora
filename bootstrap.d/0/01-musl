version=1.1.5

echo "Unpacking musl-${version} ..."
rm -rf "${tmpdir}"/musl-${version}
tar xf "${tardir}"/musl-${version}.tar.?z* -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/musl-${version}

./configure \
 --prefix="${crossdir}"/$TARGET \
 $ARCH

make install-headers

