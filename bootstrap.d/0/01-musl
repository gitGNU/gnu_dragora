version=1.1.10

echo "Unpacking musl-${version} ..."
rm -rf "${tmpdir}"/sources/musl-${version}
tar xf "${worktree}"/sources/musl-${version}.tar.lz -C "${tmpdir}"/sources

# Build instructions
cd "${tmpdir}"/sources/musl-${version}

make install-headers prefix="${crossdir}"/$TARGET ARCH="$MUSL_ARCH"

