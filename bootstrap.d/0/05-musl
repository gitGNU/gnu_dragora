version=1.1.5

echo "Unpacking musl-${version} ..."
rm -rf "${tmpdir}"/musl-${version}
tar xf "${tardir}"/musl-${version}.tar.?z* -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/musl-${version}

CROSS_COMPILE="${TARGET}-" \
./configure \
 --prefix=/usr \
 --syslibdir=/lib \
 --enable-debug

make -j${jobs}
make install DESTDIR="${crossdir}"/$TARGET

