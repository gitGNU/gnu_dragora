version=1.1.6

echo "Unpacking musl-${version} ..."
rm -rf "${tmpdir}"/musl-${version}
tar xf "${tardir}"/musl-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/musl-${version}

# Import and export toolchain variables
. "${_envdir}"/s1-env

CROSS_COMPILE="${target}-" \
./configure \
 --prefix=/tools \
 --syslibdir=/lib \
 --host=$target \
 --enable-debug \
 --enable-optimize

make -j${jobs}
make install DESTDIR="$rootdir"

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

