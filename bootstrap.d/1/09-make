version=4.1

echo "Unpacking make-${version} ..."
rm -rf "${tmpdir}"/make-${version}
tar xf "${tardir}"/make-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/make-${version}

# Import and export toolchain variables
. "${_envdir}"/cross-env

./configure \
 --prefix=/tools \
 --build=$host \
 --host=$target \
 --disable-nls \
 --without-guile

make -j${jobs}
make install

# Clean up the documentation
rm -rf "${rootdir}"/tools/share/info \
       "${rootdir}"/tools/share/man

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

