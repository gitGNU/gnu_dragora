echo "Uncompressing structure of directories ..."

if [ ! -f "${worktree}"/archive/_hierarchyfs.tar.gz ] ; then
  echo "${worktree}/archive/_hierarchyfs.tar.gz is not a regular file"
  exit 1
fi

# To check the integrity before the decompression
tar tf "${worktree}"/archive/_hierarchyfs.tar.gz > /dev/null || exit $?

cd "$rootdir" && tar xpf "${worktree}"/archive/_hierarchyfs.tar.gz

