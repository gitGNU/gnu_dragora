# to copy, distribute and modify it.

version=2.25

echo "Unpacking binutils-${version} ..."
rm -rf "${tmpdir}"/binutils-${version}
tar xf "${tardir}"/binutils-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/binutils-${version}

# Patch to build if makeinfo(1) is not available
patch -Np1 -i "${patchdir}"/binutils/binutils-gdb.git-bba33ab1e0f7d2ebd8f8435f92ed12e2a3c558a4.patch

# Build in a separate directory
rm -rf ../binutils-build
mkdir ../binutils-build
cd ../binutils-build

# Import and export toolchain variables
. "${_envdir}"/cross-env

../binutils-${version}/configure \
 --prefix=/tools \
 --build=$host \
 --host=$target \
 --target=$target \
 --with-lib-path=/tools/lib \
 --disable-shared \
 --disable-nls \
 --disable-werror \
 --disable-ppl-version-check \
 --disable-cloog-version-check \
 $multilib

make -j${jobs}
make install

# Clean up the documentation
rm -rf "${rootdir}"/tools/share/info \
       "${rootdir}"/tools/share/man

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

