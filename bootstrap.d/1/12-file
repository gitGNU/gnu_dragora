version=5.22

echo "Unpacking file-${version} ..."
rm -rf "${tmpdir}"/file-${version}
tar xf "${tardir}"/file-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/file-${version}

cp -f "${patchdir}"/common/config.sub config.sub

# A local installation of "file" is needed in order
# to cross-compile "file" matching the same version
./configure \
 --prefix="$crossdir" \
 --build=$host \
 --disable-fsect-man5 \
 --disable-shared \
 --enable-static

make V=1
make install

make clean

# Import and export toolchain variables
. "${_envdir}"/s1-env

./configure \
 --prefix=/tools \
 --build=$host \
 --host=$target \
 --disable-fsect-man5 \
 --disable-shared \
 --enable-static

make
make install

