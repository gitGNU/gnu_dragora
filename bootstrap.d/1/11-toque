version=0.1-pre34

echo "Unpacking toque-${version} ..."
rm -rf "${tmpdir}"/sources/toque-${version}
tar xf "${worktree}"/sources/toque-${version}.tar.lz -C "${tmpdir}"/sources

# Build instructions
cd "${tmpdir}"/sources/toque-${version}

# Import and export toolchain variables
. "${worktree}"/bootstrap.d/env.d/cross-env

./configure CXX="$CXX" CXXFLAGS="-static" LDFLAGS="-Wl,-static" --prefix=/tools --sbindir=/tools/bin

make -j${jobs}
make install

cat "${worktree}"/archive/toque/etc/toquerc > /tools/etc/toquerc

# Add internal options of multilib for toquerc
cat << EOF >> /tools/etc/toquerc
multilib = $MULTILIB

EOF

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

