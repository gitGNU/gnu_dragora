version=0.1-pre33

echo "Unpacking toque-${version} ..."
rm -rf "${tmpdir}"/toque-${version}
tar xf "${tardir}"/toque-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/toque-${version}

# Import and export toolchain variables
. "${_envdir}"/s1-env

./configure CXX="$CXX" CXXFLAGS="-static" LDFLAGS="-Wl,-static" --prefix=/tools --sbindir=/tools/bin

make -j${jobs}
make install

cat "${archivedir}"/toque/etc/toquerc > /tools/etc/toquerc

