version=1.20.2

echo "Unpacking busybox-${version} ..."
rm -rf "${tmpdir}"/busybox-${version}
tar xf "${tardir}"/busybox-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"
cd busybox-${version} || cd busybox

# Import and export toolchain variables
. "${_envdir}"/s1-env

# Patch including lzip support
patch -Np1 -i "${patchdir}"/busybox/busybox-1.20.2_lzip-1

make mrproper

cat "${archivedir}"/busybox/busybox-config_stage1 > .config
make oldconfig

make -j${jobs} busybox V=1 \
  ARCH="$LINUX_ARCH" \
  CROSS_COMPILE="${target}-" \
  HOSTCFLAGS="-D_GNU_SOURCE"

make install CONFIG_PREFIX=/tools \
  ARCH="$LINUX_ARCH" \
  CROSS_COMPILE="${target}-" \
  HOSTCFLAGS="-D_GNU_SOURCE"

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

