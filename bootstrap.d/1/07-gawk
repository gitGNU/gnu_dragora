version=4.1.1

echo "Unpacking gawk-${version} ..."
rm -rf "${tmpdir}"/gawk-${version}
tar xf "${tardir}"/gawk-${version}.tar.lz -C "$tmpdir"

# Build instructions
cd "${tmpdir}"/gawk-${version}

# Import and export toolchain variables
. "${_envdir}"/cross-env

./configure \
 --prefix=/tools \
 --build=$host \
 --host=$target \
 --disable-nls \
 --without-libintl-prefix \
 --without-libsigsegv-prefix \
 ac_cv_func_working_mktime=yes

make -j${jobs}
make install

# Clean up the documentation
rm -rf "${rootdir}"/tools/share/info \
       "${rootdir}"/tools/share/man

# Unset imported variables from file
unset CC CXX AR AS LD RANLIB READELF STRIP

